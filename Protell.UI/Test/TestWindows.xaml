<Window x:Class="Protell.UI.Test.TestWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestWindows" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Content="Download Current" Name="btnCurrent" Click="btnCurrent_Click" />
        <DataGrid Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Campo 1"/>
                <DataGridTextColumn Header="Campo 2"/>
                <DataGridTextColumn Header="Campo 3"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="2" Content="Ver mas..." Name="btnMore" Click="btnMore_Click"/>
        
    </Grid>
</Window>
